# LinkedIn Credentials
# CRITICAL: Never commit your real credentials to version control!
# This is for EDUCATIONAL purposes only. Do not use on real accounts.
LINKEDIN_EMAIL=your.email@example.com
LINKEDIN_PASSWORD=your_password_here

# Application Settings
LOG_LEVEL=info                    # Options: debug, info, warn, error
LOG_TO_FILE=true                  # Whether to write logs to file
DATABASE_PATH=./linkedin.db       # Path to SQLite database
SESSION_PATH=./sessions           # Directory to store session cookies

# Rate Limiting (helps avoid detection)
DAILY_CONNECTION_LIMIT=50         # Maximum connection requests per day
HOURLY_ACTION_LIMIT=20            # Maximum actions per hour
MIN_ACTION_DELAY_SEC=120          # Minimum delay between actions (seconds)
MAX_ACTION_DELAY_SEC=300          # Maximum delay between actions (seconds)

# Stealth Settings
BUSINESS_HOURS_ONLY=true          # Only operate during business hours
HEADLESS_MODE=false               # Run browser in headless mode (less realistic)
RANDOM_USER_AGENT=true            # Randomize browser user agent
